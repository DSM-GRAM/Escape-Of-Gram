<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.CompleteActivity"
        android:background="@color/colorPrimary">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/rank_btn"
                  android:id="@+id/linearLayout2">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="COMPLETE!"
                  android:layout_marginBottom="50dp"
                  android:gravity="center"
                  android:textColor="@color/colorPrimaryDark"
                  android:textSize="42sp"/>

        <TextView android:id="@+id/complete_time_tv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="00:00"
                  android:fontFamily="@font/ds_digi"
                  android:gravity="center"
                  android:textSize="122sp"
                  android:textColor="@color/colorPrimaryDark"/>

        <EditText android:id="@+id/rank_name_edit"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textSize="22sp"
                  android:layout_margin="50sp"
                  android:hint="Your Name"
                  android:backgroundTint="@color/colorPrimaryDark"
                  android:textColorHint="@color/colorPrimaryDark"
                  android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <Button android:id="@+id/rank_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rank"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/corner"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>