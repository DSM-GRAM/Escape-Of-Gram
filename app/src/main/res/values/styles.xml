<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_ani</item>
        <item name="android:windowExitAnimation">@anim/slide_down_ani</item>
    </style>

    <style name="DialogAnimationReverse">
        <item name="android:windowEnterAnimation">@anim/slide_up_ani_reverse</item>
        <item name="android:windowExitAnimation">@anim/slide_down_ani_reverse</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
